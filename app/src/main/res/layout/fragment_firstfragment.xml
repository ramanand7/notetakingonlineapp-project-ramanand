<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#935E5E"
    tools:context=".fragments.firstfragment">

    <!-- TODO: Update blank fragment layout -->
    <Button
        android:id="@+id/bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="600dp"
        android:text="SEARCH"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="312dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="250dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="364dp"
                android:src="@drawable/bs1" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="379dp"
                android:src="@drawable/bs2" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="421dp"
                android:layout_height="229dp"
                android:src="@drawable/bs3" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/bsc1" />
        </LinearLayout>
    </ScrollView>

    <EditText
        android:id="@+id/inputbinary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="550dp"
        android:background="#CABDBD"
        android:ems="10"
        android:gravity="center"
        android:hint="enter number to search"
        android:inputType="textMultiLine"
        android:textColor="#0E0909" />

    <TextView
        android:id="@+id/output"
        android:layout_width="228dp"
        android:layout_height="43dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="600dp"
        android:layout_marginBottom="0dp"
        android:background="#CCCCCA"
        android:gravity="center"
        android:text="OUTPUT"
        android:textColor="#090808" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="500dp"
        android:background="#E39999"
        android:gravity="center|start|right|left"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/n1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:background="#E4E4E2"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:textColor="#151111" />

        <EditText
            android:id="@+id/n2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:background="#E4E4E2"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:textColor="#151111" />

        <EditText
            android:id="@+id/n3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:background="#E4E4E2"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:textColor="#151111" />

        <EditText
            android:id="@+id/n4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:background="#E4E4E2"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:textColor="#151111" />

        <EditText
            android:id="@+id/n5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:background="#E4E4E2"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:textColor="#151111" />
    </LinearLayout>

    <TextView
        android:id="@+id/bub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="BINARY SEARCH ALGO AND EXAMPLE"
        android:textColor="#090707"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="232dp"
        android:layout_height="31dp"
        android:layout_marginTop="460dp"
        android:text="check on live example" />

</FrameLayout>